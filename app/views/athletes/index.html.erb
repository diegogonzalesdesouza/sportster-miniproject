<div class="container">
  <div class="columns is-multiline">
    <% @athletes.each do |athlete| %>
      <%= link_to athlete_path(athlete) do %>
        <div class="column is-three-quarters-mobile is-half-tablet is-one-third-desktop">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                <%= image_tag "athlete-3.jpg", alt: "Athlete" %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= image_tag "athlete-4.jpg", alt: "Athlete" %>
                  </figure>
                  <br>
                </div>
                <div class="media-content">
                  <p class="title is-4"><%= athlete.first_name.capitalize + ' ' + athlete.last_name %></p>
                  <p class="subtitle is-6">Run for your life</p>
                </div>
              </div>
              <div class="content">
                <br>
                <p class="athlete-content"><strong>Athlete Email: </strong><%= athlete.user.email %></p>
                <p class="athlete-content"><strong>Athlete Address: </strong><%= athlete.user.address %></p>
                <a href="#"></a> <a href="#"></a>
                <br>
                <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
              </div>
              <% if current_user.brand.is_interested?(current_user.brand, athlete) %>
                <div class="interest">
                  <%= link_to "interests/#{Interest.where(brand_id: current_user.brand, athlete_id: athlete).first.id}", method: 'DELETE' do %>
                    <%= icon('fas', 'star') %>
                  <% end %>
                </div>
              <% else %>
                <div class="interest">
                  <%= link_to interests_path(athlete_id: athlete), method: 'POST' do %>
                    <%= icon('far', 'star') %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

