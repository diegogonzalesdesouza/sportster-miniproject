<div class="container">
  <div class="columns is-centered form-container-to-vcenter is-vcentered">
    <div class="column is-one-third">
      <div class="box">
        <%= form_for @brand do |f| %>
        <%# PROFILE PHOTO %>
        <%= f.label :profile_photo, 'Profile Photo', class:'label'%>
        <%= f.file_field :profile_photo %>
        <%= f.hidden_field :profile_photo_cache %>

        <%# COVER PHOTO %>
        <%= f.label :cover_photo, 'Cover Photo', class:'label'%>
        <%= f.file_field :cover_photo %>
        <%= f.hidden_field :cover_photo_cache %>

        <%# BRAND NAME %>
        <%= f.label :name, 'Name', class:'label'%>
        <%= f.text_field :name, class:"input", type: "text", placeholder: "Partnr" %>

        <%# SLOGAN %>
        <%= f.label :slogan, 'Slogan', class:'label'%>
        <%= f.text_field :slogan, class:"input", type: "text", placeholder: "Wealth lifestyle made together" %>

        <%# CNPJ %>
        <%= f.label :cnpj, 'CNPJ', class:'label'%>
        <%= f.text_field :cnpj, class:"input", type: "text", placeholder: "36577572716" %>

        <div style="margin: 5px">
          <%= f.submit "Save", class: "button is-link" %>
          <%= link_to "Cancel", all_athletes_path, class: "button is-text" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
