<div class="container is-fullhd">
  <div class="columns is-centered">
    <div class="column is-half">
      <div class="box">

        <div class="cover-Photo">
          <%= cl_image_tag @brand.cover_photo, height: 300, width: 700, crop: :fill, style:"border-radius: 12px 12px 12px 12px"%>
        </div>
        <div class="box">
          <article class="media">
            <div class="media-left">
              <%= cl_image_tag @brand.profile_photo.url(:thumnail), style:"border-radius: 12px 12px 12px 12px" %>
            </div>
          <div class="media-content">
              <p>

        <p>
          <%= @brand.name %>
        </p>

        <p>
          <%= @brand.slogan %>
        </p>

        <p>
          <%= @brand.cnpj %>
        </p>
      </div>

        <% if policy(@brand).edit? %>
        <%= link_to "Edit profile", edit_brand_path(@brand), class: 'button is-small' %>
        <% end %>

        <% if policy(@brand).destroy? %>
        <%= link_to 'Delete profile', @brand, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-small' %>
        <% end %>

        <%= link_to "Back", :root, class: 'button is-small' %>
      </div>
    </div>
  </div>
</div>
