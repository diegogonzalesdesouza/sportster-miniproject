<div class="">
  <div class="container">
    <div class="columns is-centered form-container-to-vcenter is-vcentered mt4">
      <div class="column is-one-third">
        <div class="box">
          <h2 class="has-text-centered" style="padding:3vh; font-size: 1.2em;"><strong>Ready for your next competition?</strong></h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: 'lable ' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
          </div>

          <div class="field">
            <%= f.label :password, class: 'lable' %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
          </div>

          <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class: "button is-info" %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
